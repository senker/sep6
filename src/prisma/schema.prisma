generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Email shoul be unique && make name required && make password hashed and slated using bcrypt && (maybe) make id hex string
model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
}

